<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="418dp"
            android:layout_height="186dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/textViewRest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:text="Fat Pigeon"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewuname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewRest"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Jenny"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/textViewPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewuname"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="123546879"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewPhone"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="160"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <Button
                android:id="@+id/decline"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/textViewPrice"
                android:layout_marginBottom="-43dp"
                android:background="@color/quantum_vanillared400"
                android:text="Decline" />

            <Button
                android:id="@+id/Accept"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignRight="@+id/decline"
                android:layout_alignBottom="@id/textViewPrice"
                android:layout_marginRight="-187dp"
                android:layout_marginBottom="-43dp"
                android:background="@color/quantum_googgreen800"
                android:text="Accept" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>