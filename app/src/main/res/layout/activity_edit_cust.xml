<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Registeringto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/photo3"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="263dp"
        android:layout_height="65dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="Edit Profile"
        android:textColor="@color/Black"
        android:textColorLink="#FFFFFF"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.572"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <EditText
        android:id="@+id/fullNameEdit"
        android:layout_width="313dp"
        android:layout_height="44dp"
        android:alpha="0.55"
        android:background="@drawable/rb_text_view_2"
        android:ems="10"
        android:hint="  Name     "
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#161617"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.271" />

    <EditText
        android:id="@+id/phoneEdit"
        android:layout_width="313dp"
        android:layout_height="44dp"
        android:alpha=".55"
        android:background="@drawable/rb_text_view_2"
        android:ems="10"
        android:hint=" Phone number"
        android:inputType="phone"
        android:textColorHint="#111112"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.704" />

    <Button
        android:id="@+id/PhoneChange"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:background="@drawable/deetsbutton"
        android:text="Change Number"
        android:textAllCaps="false"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.803" />

    <EditText
        android:id="@+id/passEdit"
        android:layout_width="313dp"
        android:layout_height="44dp"
        android:alpha="0.55"
        android:background="@drawable/rb_text_view_2"
        android:ems="10"
        android:hint="  Password(For Email users)"
        android:inputType="textPersonName"
        android:textColorHint="#0F0F10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <Button
        android:id="@+id/nameChange"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:background="@drawable/deetsbutton"
        android:text="Change Username"
        android:textAllCaps="false"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375" />

    <Button
        android:id="@+id/passwordChange"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:background="@drawable/deetsbutton"
        android:text="Change Password"
        android:textAllCaps="false"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592" />

    <Button
        android:id="@+id/Dashy"
        android:layout_width="88dp"
        android:layout_height="55dp"
        android:background="@drawable/deetsbutton"
        android:text="Back to Dashboard"
        android:textAllCaps="false"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97" />

</androidx.constraintlayout.widget.ConstraintLayout>